#sign_in

  #via_username_password
    = form_for :session, :url => login_path do |form|
      %fieldset
        %legend Sign in with your PivotalTracker username and password.
        = label_tag "username", "Username or Email"
        = text_field_tag "username"
        = label_tag "password"
        = password_field_tag "password"
      %fieldset.buttons
        = form.submit "Retrieve Projects"

  #via_api_token
    = form_for :session, :url => login_path do |form|
      %fieldset
        %legend Alternatively, sign in with your PivotalTracker API token.
        = label_tag "api_token", "API Token"
        = text_field_tag "api_token"
      %fieldset.buttons
        = form.submit "Retrieve Projects"
